{
	"name": "proshop",
	"version": "1.0.0",
	"description": "ecommerce site",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"start": "node backend/server.js",
		"server": "nodemon backend/server.js",
		"client": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"seed": "node backend/seeder.js",
		"data:destroy": "node backend/seeder.js --destroy",
		"build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thijsBoet/proshop.git"
	},
	"author": "Matthijs Boet",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thijsBoet/proshop/issues"
	},
	"homepage": "https://github.com/thijsBoet/proshop#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.2.0",
		"multer": "^1.4.5-lts.1",
		"dotenv": "^16.0.3"
	},
	"devDependencies": {
		"colors": "^1.4.0",
		"concurrently": "^8.0.1",
		"nodemon": "^2.0.22"
	}
}
